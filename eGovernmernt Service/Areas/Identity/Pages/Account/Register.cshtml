@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="row">
    <div class="col-lg-6 m-auto rounded border p-3">

        <h2>Add Employee</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Employee ID</label>
                <div class="col-sm-8">
                    <input asp-for="Input.EmpID" class="form-control" />
                </div> 
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">First name</label>
                <div class="col-sm-8">
                    <input asp-for="Input.FirstName" class="form-control" />
                    
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Last name</label>
                <div class="col-sm-8">
                    <input asp-for="Input.LastName" class="form-control" />
                </div>
            </div>

            <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Department</label>
                <div class="col-sm-8">
                    <select asp-for="Input.DepartmentRole" class="form-control">
                        <option value="Health">Department of Health</option>
                        <option value="Social Development">Department of Social Development</option>
                        <option value="Home Affairs">Department of Home Affairs</option>
                        <option value="Traffic">Department of Traffic</option>                      
                    </select>
                    </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Password</label>
                <div class="col-sm-8">
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Confirm password</label>
                <div class="col-sm-8">
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div>
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn  btn-primary">Add Employee </button>
                </div>
            </div>
        </form>
    </div>
</div>
