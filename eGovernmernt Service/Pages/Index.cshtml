    <section class="bg-light py-5">
        <div class="container">
            <div class="row gx-1 align-items-center">
                <div class="col-md-3">
                    <div class="me-md-2 me-lg-5"><img class="img-fluid " src="/img/image.png"></div>
                </div>
                <div class="col-md-6">
                    <div class="ms-md-2 ms-lg-5 mt-5 mt-md-0">
						<h1 class="display-3 fw-bold mb-0">e-Government Service</h1>
						<p class="lead">Connecting Government Employees to Seamless Solutions for Efficient Service Delivery and Citizen Empowerment!</p>
						
                    </div>
                </div>
            </div>
        </div>
    </section>
