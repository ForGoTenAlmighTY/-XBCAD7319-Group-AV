@using Microsoft.AspNetCore.Identity
@using eGovernmernt_Service.Models

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager




    <!-- Sidebar Start -->
    <div class="sidebar pe-4 pb-3">
        <nav class="navbar bg-light navbar-light">
            <a href="index.html" class="navbar-brand mx-4 mb-3">
                <h3 class="text-primary"></i>eGoverment</h3>
            </a>
            <div class="d-flex align-items-center ms-4 mb-4">
                <div class="position-relative">
                <i class="fa fa-user me-2"></i>
                    <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
                </div>

                @if (SignInManager.IsSignedIn(User))
                {
                    if (User.IsInRole("Health"))
                    {
                        <div class="ms-3">
                            <h6 class="mb-0">@User.Identity?.Name</h6>
                            <span>Department Of Health</span>
                        </div>

                    }
                    else if (User.IsInRole("Social Development"))
                    {
                        <div class="ms-3">
                            <h6 class="mb-0">@User.Identity?.Name</h6>
                            <span>Department Of Social Development</span>
                        </div>
                    }
                    else if (User.IsInRole("Home Affairs"))
                    {
                        <div class="ms-3">
                            <h6 class="mb-0">@User.Identity?.Name</h6>
                            <span>Department Of Home Affairs</span>
                        </div>

                    }
                    else if (User.IsInRole("Traffic"))
                    {
                        <div class="ms-3">
                            <h6 class="mb-0">@User.Identity?.Name</h6>
                            <span>Department Of Traffic</span>
                        </div>
                    }
                }

            </div>
            <div class="navbar-nav w-100">
                <a class="nav-item nav-link active">
                    <i class="fa fa-tachometer-alt me-2"></i>
                    Dashboard
                </a>
           
                <a asp-area="Identity" asp-page="/Account/Logout" class="nav-item nav-link">
                <i class="fa fa-sign-out-alt me-2" ></i>
                    Log Out
                </a>
            </div>
        </nav>
    </div>
    <!-- Sidebar End -->



